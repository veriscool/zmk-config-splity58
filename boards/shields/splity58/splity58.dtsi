#include "splity58-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    matrix_transform0: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,6)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,6)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(4,5) RC(4,7) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,6)
            RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    aliases {
        led-red = &led0;
        led-green = &led1;
        led-blue = &led2;
    };

    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0: led_0 {
            gpios = <&pro_micro 9 GPIO_ACTIVE_HIGH>;  // red LED, connected to P0.26
        };
        led1: led_1 {
            gpios = <&pro_micro 9 GPIO_ACTIVE_HIGH>;  // green LED, connected to P0.30
        };
        led2: led_2 {
            gpios = <&pro_micro 9 GPIO_ACTIVE_HIGH>;  // blue LED, connected to P0.06
        };
    };
};

&physical_layout_splity58 {
    transform = <&matrix_transform0>;
};
